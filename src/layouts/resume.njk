---
layout: base
---

<main class="main container">

        {% if collections.introduction.length %}
            {% set intro = collections.introduction|first %}
            <section class="section" id="section-introduction">
                <h2 class="section__title">{{ intro.data.title }}</h2>
                <div class="lead p-summary">
                    {{ intro.templateContent | safe }}
                </div>
            </section>
        {% endif %}

        <section class="section" id="section-education">
            <h2 class="section__title">{{ strings.titles.education }}</h2>
            {% set entries = collections.education %}
            {% set microformat = "p-education" %}
            {% include "entrylist.njk" %}
        </section>

        <section class="section" id="section-appointments">
            <h2 class="section__title">{{ strings.titles.appointments }}</h2>
            {% set entries = collections.appointments %}
            {% set microformat = "p-experience" %}
            {% include "entrylist.njk" %}
        </section>

        <section class="section" id="section-teaching">
            <h2 class="section__title">{{ strings.titles.teaching }}</h2>
            {% set entries = collections.teaching %}
            {% set microformat = "p-experience" %}
            {% include "entrylist.njk" %}
        </section>

        <section class="section" id="section-creative-work">
            <h2 class="section__title">{{ strings.titles.creativeWork }}</h2>
            <div class="entry__content p-summary"><p>{{ strings.titles.creativeStatement }}</p></div>
            {% set entries = collections.creative | reverse %}
            {% set microformat = "p-experience" %}
            {% include "entrylist.njk" %}
        </section>

        <section class="section" id="section-service">
            <h2 class="section__title">{{ strings.titles.service }}</h2>
            {% set entries = collections.service | reverse %}
            {% set microformat = "p-experience" %}
            {% include "entrylist.njk" %}
        </section>

        <section class="section" id="section-development">
            <h2 class="section__title">{{ strings.titles.development }}</h2>
            {% set entries = collections.development | reverse %}
            {% set microformat = "p-experience" %}
            {% include "entrylist.njk" %}
        </section>


    {% if author.software or author.languages %}
        <div class="grid grid--2col">
            {% if author.software %}
            <section class="section section--half" id="section-software">
                <h2 class="section__title">{{ strings.titles.software }}</h2>
                <ul class="bulletlist">
                {% for item in author.software %}
                    <li class="p-skill">{{ item }}</li>
                {% endfor %}
                </ul>
            </section>
            {% endif %}

            {% if author.languages %}
            <section class="section section--half" id="section-languages">
                <h2 class="section__title">{{ strings.titles.languages }}</h2>
                <ul class="bulletlist">
                {% for language in author.languages %}
                    <li class="p-skill">{{ language.name }} {#({{ language.level }})#}</li>
                {% endfor %}
                </ul>
            </section>
            {% endif %}
        </div>
    {% endif %}

    {% if collections.custom.length %}
        {% set custom = collections.custom|first %}
        <section class="section" id="section-custom">
            {% if custom.data.title %}
                <h2 class="section__title">{{ custom.data.title }}</h2>
            {% endif %}
            <div class="markdown">
                {{ custom.templateContent | safe }}
            </div>
        </section>
    {% endif %}

</main>